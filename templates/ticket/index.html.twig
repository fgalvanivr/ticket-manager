{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tickets</h1>

    <div><a class="btn btn-primary float-right" href="{{ path('create_ticket') }}"><i class="fas fa-plus"></i> Ticket</a></div>
    <table class="table">
        <thead>
        <tr>
            <th>Creation date</th>
            <th>Author</th>
            <th>Assigned to</th>
            <th>State</th>
        </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
        <tr>
            <td><a href="{{ path('edit_ticket', {"id": ticket.id}) }}">{{ ticket.createdAt|date('d-m-Y H:i:s') }}</a></td>
            <td>{{ ticket.createdBy ? ticket.createdBy.username : '-' }}</td>
            <td>{{ ticket.assignedTo ? ticket.assignedTo.username : '-' }}</td>
            <td>{#{ ticket.currentPlace }#}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
