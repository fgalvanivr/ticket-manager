{% extends 'base.html.twig' %}

{% block title %}New Ticket{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>New Ticket</h1>
    <hr>
    <div class="form-group">
    {{ form_start(form, {'attr': {'class': ''} }) }}
    {{ form_widget(form.body, {'attr': {'class': 'form-control min-height-200', 'placeholder': 'Reply'} } ) }}
    <button type="submit" class="btn btn-primary btn-lg btn-save" title="Send" style="margin-top:10px;">Send</button>
    {{ form_end(form) }}
    </div>
    
</div>
{% endblock %}

